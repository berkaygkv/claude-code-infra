{
  "permissions": {
    "allow": [
      "Bash(scripts/*)",
      "Bash(uv run .claude/skills/excalidraw/scripts/*)"
    ]
  },
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/export-transcript.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/capture-research.py"
          }
        ]
      }
    ]
  }
}
